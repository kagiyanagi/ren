---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image = "/image.jpg",
} = Astro.props;
import {
  SITE_DESCRIPTION,
  KNOWN_TECH,
  NAV_LINKS,
  SEO_KEYWORDS,
  SITE_TITLE,
  TWITTER_HANDLE,
} from "@/consts";
const socialLinks = NAV_LINKS.map((link) => link.href)
  .filter(Boolean)
  .map((href) => (href?.startsWith("http") ? href : `https:${href}`));
const structuredData = [
  {
    "@context": "https://schema.org",
    "@type": "Person",
    name: SITE_TITLE,
    alternateName: ["Aqua", "Kagiyanagi", "Ren"],
    description: SITE_DESCRIPTION,
    url: canonicalURL.href,
    sameAs: socialLinks,
    knowsAbout: KNOWN_TECH,
  },
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: SITE_TITLE,
    url: Astro.site?.href,
    description,
    publisher: {
      "@type": "Person",
      name: SITE_TITLE,
    },
  },
];
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href="/muichiro.svg" type="image/svg+xml" />
<link rel="alternate icon" href="/muichiro.ico" type="image/x-icon" />
<link rel="shortcut icon" href="/muichiro.svg" />
<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />

<link
  rel="preload"
  href="/fonts/VCRosdNEUE.ttf"
  as="font"
  type="font/ttf"
  crossorigin
/>

<link rel="canonical" href={canonicalURL} />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={SEO_KEYWORDS} />
<meta name="author" content={SITE_TITLE} />
<meta
  name="robots"
  content="index,follow,max-image-preview:large,max-snippet:-1,max-video-preview:-1"
/>
<meta name="application-name" content={SITE_TITLE} />
<meta name="theme-color" content="#000000" />

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:locale" content="en_US" />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
<meta property="twitter:site" content={TWITTER_HANDLE} />

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<ClientRouter />
