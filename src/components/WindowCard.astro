---
type Props = {
  className?: string;
  bordered?: boolean;
  headerClass?: string;
  bodyClass?: string;
};

const {
  className = "",
  bordered = true,
  headerClass = "",
  bodyClass = "",
} = Astro.props;
const passedClass = (Astro.props as any).class ?? className ?? "";
const baseClasses =
  "w-full mx-auto bg-gradient-to-br relative pb-5 from-white/[0.001] to-white/[0.01] rounded-lg overflow-hidden";
const borderClasses = bordered ? "border-2 border-white" : "";
---

<div class={`${baseClasses} ${borderClasses} ${passedClass}`}>
  <div class={`flex items-center justify-start px-4 py-2 bg-white/95 ${headerClass}`}>
    <div class="flex space-x-2">
      <div class="w-3 h-3 rounded-full bg-black"></div>
      <div class="w-3 h-3 rounded-full bg-black"></div>
      <div class="w-3 h-3 rounded-full bg-black"></div>
    </div>
  </div>

  <div class={`p-6 tracking-wider ${bodyClass}`}>
    <slot />
  </div>
</div>
