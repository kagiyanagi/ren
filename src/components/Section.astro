---
type Props = {
  title: string;
  full_screen?: boolean;
  className?: string;
};
const { title = "Section", full_screen = false, className = "" } = Astro.props;
const passedClass = (Astro.props as any).class ?? className ?? "";
---

<section
  id={title.toLowerCase().replaceAll(" ", "")}
  class={`${full_screen ? "min-h-[100svh]" : ""} px-4 py-10 w-full !overflow-x-hidden ${passedClass}`}
  {...Astro.props}
>
  <div class="w-full grid place-items-center">
    <h2 class="text-4xl md:text-6xl text-center font-pixel">
      {`<${title} />`}
    </h2>
  </div>
  <div class="w-full mt-10 px-4">
    <slot />
  </div>
</section>
